<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheFilmVault.Views.MovieExplore"
             Title="MovieExplore" BackgroundColor="#151515">

    <Grid RowDefinitions="75,*,75" Padding="0,10,0,0">
        <Label Text="Movies" TextColor="White" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry Placeholder="Search" PlaceholderColor="White" FontSize="15" TextColor="White" HorizontalOptions="Start" Margin="50,20" WidthRequest="200"/>

        <Grid ColumnDefinitions="4,*,4" Grid.Row="1" Margin="150,0">
            <BoxView BackgroundColor="White" Grid.Column="0"/>
            <BoxView BackgroundColor="White" Grid.Column="2"/>
        </Grid>

        <Grid RowDefinitions="44,*,4" Grid.Row="1" Margin="100,0,100,20">
            <BoxView BackgroundColor="White" Grid.Row="0" HeightRequest="4" VerticalOptions="Center"/>
            <BoxView BackgroundColor="White" Grid.Row="2"/>
        </Grid>

        <Grid ColumnDefinitions="*,*,*" Grid.Row="1" VerticalOptions="Start">
            <Button Text="- ACCOUNT -" BackgroundColor="#151515" FontSize="25" FontAttributes="Bold" HorizontalOptions="End" Grid.Column="0"/>
            <Button Text="- HOME -" BackgroundColor="#151515" FontSize="25" FontAttributes="Bold" HorizontalOptions="Center" Grid.Column="1" Margin="20,0"/>
            <Button Text="- WATCHLIST -" BackgroundColor="#151515" FontSize="25" FontAttributes="Bold" HorizontalOptions="Start" Grid.Column="2"/>
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,*,4,300" Margin="150,50">
            <BoxView BackgroundColor="White" Grid.Column="2"/>
            <Border Grid.ColumnSpan="2" BackgroundColor="#151515" StrokeThickness="0" Margin="10,0">
                <CarouselView x:Name="newMovies" PeekAreaInsets="0" IsSwipeEnabled="False" IsScrollAnimated="False" Position="{Binding CurrentPosition}">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Border>
                                <Grid>
                                    <Image Source="{Binding posterPath}" Aspect="AspectFill" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Border HorizontalOptions="Fill" VerticalOptions="End" StrokeThickness="0">
                                        <Grid>
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                    <GradientStop Color="#15151500" Offset="0.0"/>
                                                    <GradientStop Color="#151515" Offset="0.5"/>
                                                    <GradientStop Color="#15151500" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                            <Label Text="{Binding movieTitle}" TextColor="White" FontSize="20" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,30,0,20"/>
                                        </Grid>
                                    </Border>
                                    <Border HorizontalOptions="Start" VerticalOptions="Start" StrokeThickness="0">
                                        <Grid>
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                    <GradientStop Color="#15151500" Offset="0.0"/>
                                                    <GradientStop Color="#151515" Offset="0.5"/>
                                                    <GradientStop Color="#15151500" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                            <Label Text="{Binding movieRating}" TextColor="White" FontSize="20" VerticalOptions="Center" HorizontalOptions="Start" Margin="20,20,30,0"/>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </Border>
            <Button Text=">" HorizontalOptions="End" VerticalOptions="Center" Command="{Binding goRight}" BackgroundColor="#151515" BorderColor="White" CornerRadius="0" Grid.Column="1"/>
            <Button Text="&lt;" HorizontalOptions="Start" VerticalOptions="Center" Command="{Binding goLeft}" BackgroundColor="#151515" BorderColor="White" CornerRadius="0"/>
        </Grid>
        
        <Label Text="The Film Vault" TextColor="White" FontSize="25" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Start"/>
    </Grid>
</ContentPage>